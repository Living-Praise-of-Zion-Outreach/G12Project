<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_Activity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Activity.form.SetUpMode">


    <Button
        android:id="@+id/btnSkip_Set_Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#00000000"
        android:text="Skip"
        style="@style/set_up_mode_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_Slide_Set_Up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/llbullet_Set_Up"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/btnPrev_Set_Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:text="Prev"
        android:visibility="gone"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/ivPrev_Set_Up"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnNext_Set_Up"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#00000000"
        android:text="Next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/ivPrev_Set_Up"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/ellipses_left"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivNext_Set_Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/ellipses_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <LinearLayout
        android:id="@+id/llbullet_Set_Up"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivNext_Set_Up"
        app:layout_constraintStart_toEndOf="@+id/ivPrev_Set_Up">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>