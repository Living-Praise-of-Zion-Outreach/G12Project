<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_Activity"
    tools:context=".Activity.form.ProfileWorkInfoForm">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_work_info_form"
        style="@style/custom_ToolBar" />

    <RelativeLayout style="@style/custom_relative_layout">
        <ScrollView style="@style/custom_scroll_view">
        <LinearLayout
            style="@style/background_group_box_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_occupation_profile"
                android:hint="@string/hint_occupation"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout">
                <EditText
                    android:id="@+id/tv_occupation_profile"
                    android:inputType="textCapCharacters"
                    style="@style/custom_EditText"

                    tools:ignore="Autofill,LabelFor"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name_employer_profile"
                android:hint="@string/hint_name_of_employer"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout">
                <EditText
                    android:id="@+id/tv_name_employer_profile"
                    android:inputType="textCapCharacters"
                    style="@style/custom_EditText"
                    tools:ignore="Autofill,LabelFor"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_address_profile_form"
                android:hint="@string/hint_employer_address"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/tv_address_profile_form"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    style="@style/custom_EditText"
                    tools:ignore="Autofill,LabelFor"
                    android:lines="3"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>