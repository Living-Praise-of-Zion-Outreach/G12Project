<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_Activity"
    tools:context=".Activity.form.ProfileAddressForm">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile_form"
        style="@style/custom_ToolBar" />

    <RelativeLayout style="@style/custom_relative_layout">

        <ScrollView style="@style/custom_scroll_view">

        <LinearLayout
            style="@style/background_group_box_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_country_profile_form"
                android:hint="@string/country"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/ctv_country_profile_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:inputType="textCapCharacters"
                    tools:ignore="LabelFor,RtlSymmetry"
                    style="@style/custom_auto_complete_textview">
                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_province_profile_form"
                android:hint="@string/province"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/ctv_province_profile_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:inputType="textCapCharacters"
                    tools:ignore="LabelFor,RtlSymmetry"
                    style="@style/custom_auto_complete_textview">
                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_city_profile_form"
                android:hint="@string/municipality_city"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/ctv_city_profile_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:inputType="textCapCharacters"
                    tools:ignore="LabelFor,RtlSymmetry"
                    style="@style/custom_auto_complete_textview">
                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_barangay_profile_form"
                android:hint="@string/barangay"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/ctv_barangay_profile_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:inputType="textCapCharacters"
                    tools:ignore="LabelFor,RtlSymmetry"
                    style="@style/custom_auto_complete_textview">
                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_zipcode_profile_form"
                android:hint="@string/hint_zip_code"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout">
                <EditText
                    android:id="@+id/tv_zipcode_profile_form"
                    android:inputType="number"
                    style="@style/custom_EditText"
                    tools:ignore="Autofill,LabelFor"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_address_profile_form"
                android:hint="@string/hint_address"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                style="@style/custom_TextInputLayout"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/tv_address_profile_form"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    style="@style/custom_EditText"
                    tools:ignore="Autofill,LabelFor"
                    android:lines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>