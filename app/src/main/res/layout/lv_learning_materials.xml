<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/background_group_box_light"
    android:paddingBottom="1dp">


    <androidx.cardview.widget.CardView style="@style/CardView_Profile"
        android:id="@+id/item_cv_list_learning_materials"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="0dp"
        app:contentPadding="0dp"
        app:cardCornerRadius="5dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/civ_logo_learning_materials"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_photo_dark"
                app:civ_border_width="1dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/circle_image_view"
                />

            <TextView
                android:id="@+id/tv_title_list_learning_materials"
                style="@style/Header_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@string/sample_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"

                app:layout_constraintEnd_toStartOf="@+id/tv_total_chapters_learning_materials"
                app:layout_constraintStart_toEndOf="@+id/civ_logo_learning_materials"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_subtitle_learning_materials"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/sample_text"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@+id/tv_language_learning_materials"
                app:layout_constraintStart_toEndOf="@+id/civ_logo_learning_materials"

                app:layout_constraintTop_toBottomOf="@+id/tv_title_list_learning_materials" />

            <TextView
                android:id="@+id/tv_total_chapters_learning_materials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="11sp"
                android:text="@string/sample_text"
                app:layout_constraintEnd_toStartOf="@+id/iv_icon_arrow_list_learning_materials"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_language_learning_materials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="italic"
                android:text="@string/sample_text"
                app:layout_constraintEnd_toStartOf="@+id/iv_icon_arrow_list_learning_materials"
                app:layout_constraintTop_toBottomOf="@+id/tv_total_chapters_learning_materials" />

            <ImageView
                android:id="@+id/iv_icon_arrow_list_learning_materials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_icon_download"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/right_arrow_image_view"
                android:contentDescription="@string/todo" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>