<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/background_group_box_light"
    android:paddingBottom="1dp">


    <androidx.cardview.widget.CardView style="@style/CardView_Profile"
        android:id="@+id/cv_chords_lyrics_artist"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="0dp"
        app:contentPadding="8dp"
        app:cardCornerRadius="5dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_logo_chords_lyrics_artist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_photo_dark"
                app:civ_border_width="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/circle_image_view"
                />

            <TextView
                android:id="@+id/tv_title_chords_lyrics_artist"
                style="@style/Header_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Artist Name"
                android:textStyle="bold"

                app:layout_constraintEnd_toStartOf="@+id/iv_icon_arrow_chords_lyrics_artist"
                app:layout_constraintStart_toEndOf="@+id/civ_logo_chords_lyrics_artist"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_code_chords_lyrics_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Evangelized"
                android:textSize="11sp"
                android:textStyle=""

                app:layout_constraintTop_toBottomOf="@+id/tv_title_chords_lyrics_artist"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_subtitle_chords_lyrics_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Cebuano Band"
                android:textSize="11sp"
                android:textStyle="italic"

                app:layout_constraintEnd_toStartOf="@+id/iv_icon_arrow_chords_lyrics_artist"
                app:layout_constraintStart_toEndOf="@+id/civ_logo_chords_lyrics_artist"
                app:layout_constraintTop_toBottomOf="@+id/tv_code_chords_lyrics_artist" />

            <ImageView
                android:id="@+id/iv_icon_arrow_chords_lyrics_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_arrow_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/right_arrow_image_view"
                android:contentDescription="@string/todo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>