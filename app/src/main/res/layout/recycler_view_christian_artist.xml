<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        style="@style/CardView_Lyrics_and_Chords"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:contentPadding="0dp"
        >

        <ImageView
            android:id="@+id/iv_image_recycler_view_christian_artist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/default_photo"
            android:contentDescription="@string/christian_worship_song" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title_recycler_view_christian_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_subtitle_recycler_view_christian_artist"
                android:text="@string/artist"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle_recycler_view_christian_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/christian_song_lyrics_chords"
                android:textSize="11sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"/>


            <RelativeLayout
                android:elevation="-1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_alignParentBottom="true"
                android:alpha="0.30"
                >

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>