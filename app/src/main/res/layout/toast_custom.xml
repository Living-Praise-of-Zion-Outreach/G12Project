<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_gray"
    android:padding="16dp"
    >

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_icon_toast"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_icon_no_internet"
        android:tint="@color/white"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/tv_content_toast"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="This is sample of content with view, this is the sample of content with view" />


</LinearLayout>