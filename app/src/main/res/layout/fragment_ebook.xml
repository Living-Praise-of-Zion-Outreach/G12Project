<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/background_group_box_light"
    tools:context=".Fragments.EbookFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_no_books_found_ebooks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_icon_find_church"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/no_data_found_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:text="@string/textview_text_no_books_found"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            style="@style/no_data_found_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_loading_ebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header_content_ebooks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_total_books_uploaded_ebook"
            style="@style/label_simple_accent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/sample_text"
            android:textSize="11sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/btn_view_my_library_ebook"
            app:layout_constraintEnd_toStartOf="@+id/btn_view_my_library_ebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btn_view_my_library_ebook"
            style="@style/theme_normal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="View My Libary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_library_ebooks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_adview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_header_content_ebooks">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_ebook"
            style="@style/TabLayoutPower"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_ebook"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_ebook" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rl_home_ebook"
        style="@style/background_group_box_light"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:screenOrientation="portrait"
        app:layout_constraintBottom_toTopOf="@+id/ll_adview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cl_header_content_ebooks">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:elevation="10dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   style="@style/Header_TextView"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="16dp"
                   android:layout_marginBottom="8dp"
                   android:text="@string/textview_text_recently_added_ebooks"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_recently_added_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:nestedScrollingEnabled="false" />
               <androidx.cardview.widget.CardView
                   android:id="@+id/cv_footer_recently_added_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?attr/selectableItemBackground"
                   style="@style/top_10_cardview_background"
                   app:contentPadding="16dp"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tv_title_recently_added_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="@string/sample_text"
                           style="@style/Header_TextView"
                           android:textStyle="bold"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                       <TextView
                           android:id="@+id/tv_short_desc_recently_added_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:ellipsize="end"
                           android:maxLines="4"
                           android:justificationMode="inter_word"
                           android:text="@string/sample_text"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@+id/tv_title_recently_added_ebook" />
                       <androidx.cardview.widget.CardView
                           android:id="@+id/cv_see_details_recently_added_ebook"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginTop="8dp"
                           app:layout_constraintTop_toBottomOf="@+id/tv_short_desc_recently_added_ebook"
                           android:clickable="true"
                           android:focusable="true"
                           android:foreground="?attr/selectableItemBackground"
                           style="@style/top_10_cardview_background">
                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/textview_text_more_details"
                                   android:textStyle="bold"
                                   app:layout_constraintEnd_toStartOf="@+id/imageView15"
                                   app:layout_constraintTop_toTopOf="parent" />
                               <ImageView
                                   android:id="@+id/imageView15"
                                   style="@style/accent_icons"
                                   android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@drawable/ic_icon_right_arrow_2"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintTop_toTopOf="parent" />
                           </androidx.constraintlayout.widget.ConstraintLayout>
                       </androidx.cardview.widget.CardView>

                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   style="@style/Header_TextView"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="16dp"
                   android:layout_marginBottom="8dp"
                   android:text="RECOMMENDED FOR YOUR"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_most_recommended_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:nestedScrollingEnabled="false" />
               <androidx.cardview.widget.CardView
                   android:id="@+id/cv_footer_most_recommended_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?attr/selectableItemBackground"
                   style="@style/top_10_cardview_background"
                   app:contentPadding="16dp"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tv_title_most_recommended_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="@string/sample_text"
                           android:textStyle="bold"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                       <TextView
                           android:id="@+id/tv_short_desc_most_recommended_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:ellipsize="end"
                           android:maxLines="4"
                           android:justificationMode="inter_word"
                           android:text="@string/sample_text"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@+id/tv_title_most_recommended_ebook" />
                       <androidx.cardview.widget.CardView
                           android:id="@+id/cv_see_details_most_recommended_ebook"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginTop="8dp"
                           app:layout_constraintTop_toBottomOf="@+id/tv_short_desc_most_recommended_ebook"
                           android:clickable="true"
                           android:focusable="true"
                           android:foreground="?attr/selectableItemBackground"
                           style="@style/top_10_cardview_background">
                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/textview_text_more_details"
                                   android:textStyle="bold"
                                   app:layout_constraintEnd_toStartOf="@+id/imageView17"
                                   app:layout_constraintTop_toTopOf="parent" />
                               <ImageView
                                   android:id="@+id/imageView17"
                                   style="@style/accent_icons"
                                   android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@drawable/ic_icon_right_arrow_2"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintTop_toTopOf="parent" />
                           </androidx.constraintlayout.widget.ConstraintLayout>
                       </androidx.cardview.widget.CardView>

                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   style="@style/Header_TextView"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="16dp"
                   android:layout_marginBottom="8dp"
                   android:text="@string/textview_text_top_10_most_viewed"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_most_viewed_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:nestedScrollingEnabled="false" />
               <androidx.cardview.widget.CardView
                   android:id="@+id/cv_footer_most_viewed_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?attr/selectableItemBackground"
                   style="@style/top_10_cardview_background"
                   app:contentPadding="16dp"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tv_title_most_viewed_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="@string/sample_text"
                           android:textStyle="bold"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                       <TextView
                           android:id="@+id/tv_short_desc_most_viewed_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:ellipsize="end"
                           android:maxLines="4"
                           android:justificationMode="inter_word"
                           android:text="@string/sample_text"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@+id/tv_title_most_viewed_ebook" />
                       <androidx.cardview.widget.CardView
                           android:id="@+id/cv_see_details_most_viewed_ebook"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginTop="8dp"
                           app:layout_constraintTop_toBottomOf="@+id/tv_short_desc_most_viewed_ebook"
                           android:clickable="true"
                           android:focusable="true"
                           android:foreground="?attr/selectableItemBackground"
                           style="@style/top_10_cardview_background">
                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/textview_text_more_details"
                                   android:textStyle="bold"
                                   app:layout_constraintEnd_toStartOf="@+id/imageView16"
                                   app:layout_constraintTop_toTopOf="parent" />
                               <ImageView
                                   android:id="@+id/imageView16"
                                   style="@style/accent_icons"
                                   android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@drawable/ic_icon_right_arrow_2"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintTop_toTopOf="parent" />
                           </androidx.constraintlayout.widget.ConstraintLayout>
                       </androidx.cardview.widget.CardView>

                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   style="@style/Header_TextView"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="16dp"
                   android:layout_marginBottom="8dp"
                   android:text="TOP READER'S RECOMMENDATION"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_most_choice_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:nestedScrollingEnabled="false" />
               <androidx.cardview.widget.CardView
                   android:id="@+id/cv_footer_most_choice_ebook"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?attr/selectableItemBackground"
                   style="@style/top_10_cardview_background"
                   app:contentPadding="16dp"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tv_title_most_choice_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="@string/sample_text"

                           android:textStyle="bold"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                       <TextView
                           android:id="@+id/tv_short_desc_most_choice_ebook"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:ellipsize="end"
                           android:maxLines="4"
                           android:justificationMode="inter_word"
                           android:text="@string/sample_text"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@+id/tv_title_most_choice_ebook" />
                       <androidx.cardview.widget.CardView
                           android:id="@+id/cv_see_details_most_choice_ebook"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginTop="8dp"
                           app:layout_constraintTop_toBottomOf="@+id/tv_short_desc_most_choice_ebook"
                           android:clickable="true"
                           android:focusable="true"
                           android:foreground="?attr/selectableItemBackground"
                           style="@style/top_10_cardview_background">
                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/textview_text_more_details"
                                   android:textStyle="bold"
                                   app:layout_constraintEnd_toStartOf="@+id/imageView18"
                                   app:layout_constraintTop_toTopOf="parent" />
                               <ImageView
                                   android:id="@+id/imageView18"
                                   style="@style/accent_icons"
                                   android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@drawable/ic_icon_right_arrow_2"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintTop_toTopOf="parent" />
                           </androidx.constraintlayout.widget.ConstraintLayout>
                       </androidx.cardview.widget.CardView>

                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
           </LinearLayout>

    </ScrollView>
</RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_adview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        style="@style/background_group_box_light"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="11sp"
            android:text="@string/textview_text_advertisement"/>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ad_banner_testing"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>