<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    style="@style/header_backcolor"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_back_holy_bible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/simple_cardview_holy_bible"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_icon_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_search_book_holy_bible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Timothy 123"
        android:layout_marginStart="10dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        style="@style/material_button_holy_bible"
        app:icon="@drawable/ic_icon_drop_down"
        app:iconGravity="textEnd"
        app:layout_constraintStart_toEndOf="@+id/cv_back_holy_bible"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/left_corner_radius" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_search_version_holy_bible"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="ASV"
        android:textAllCaps="false"
        android:textSize="12sp"
        style="@style/material_button_holy_bible"
        app:icon="@drawable/ic_icon_drop_down"
        app:iconGravity="textEnd"
        app:layout_constraintStart_toEndOf="@+id/btn_search_book_holy_bible"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/right_corner_radius" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_verse_holy_bible"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_search_verse_holy_bible"
        android:layout_width="36dp"
        android:layout_height="48dp"
        app:cornerRadius="36dp"
        app:icon="@drawable/ic_icon_search"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>