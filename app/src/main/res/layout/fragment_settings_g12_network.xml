<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsG12NetworkFragment">

    <RelativeLayout
        style="@style/background_group_box_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:screenOrientation="portrait">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:elevation="10dp">

    <LinearLayout
        style="@style/background_group_box_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            >

            <Switch
                android:id="@+id/switch_wk1_simbanay_consolidate"
                android:layout_width="67dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/tv_chk_wk1_simbanay_consolidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Inherit from your Network Leader"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@+id/switch_wk1_simbanay_consolidate"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_photo_profile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_photo"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_delete_logo_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_icon_delete"
                    android:visibility="gone"
                    android:layout_marginBottom="50dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription"
                    style="@style/Float_Action_Button_Delete"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_upload_logo_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_icon_photo_camera"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription"
                    style="@style/Float_Action_Button_Default"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_about_network_settings"
            android:hint="@string/hint_about"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            style="@style/custom_TextInputLayout"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/tv_network_settings"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                style="@style/custom_EditText"
                tools:ignore="Autofill,LabelFor"
                android:lines="3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_network_name_network_settings"
            android:hint="@string/hint_network_name"
            style="@style/custom_TextInputLayout">
            <EditText
                android:id="@+id/tv_network_name_network_settings"
                style="@style/custom_EditText"
                android:inputType="textCapCharacters"
                tools:ignore="Autofill,LabelFor"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_description_network_settings"
            android:hint="@string/hint_description"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            style="@style/custom_TextInputLayout"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/tv_description_network_settings"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                style="@style/custom_EditText"
                tools:ignore="Autofill,LabelFor"
                android:lines="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_date_founded_network_settings"
            android:hint="@string/hint_date_founded"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_icon_calendar"
            style="@style/custom_TextInputLayout"
            android:layout_width="170dp">
            <EditText
                android:id="@+id/tv_date_founded_network_settings"
                style="@style/custom_EditText"
                tools:ignore="Autofill,LabelFor,TextFields"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_network_mode_network_settings"
            android:hint="@string/hint_network_mode"
            style="@style/custom_TextInputLayout"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/ctv_network_mode_network_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:inputType="textCapCharacters"
                tools:ignore="LabelFor,RtlSymmetry"
                style="@style/custom_auto_complete_textview">
            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_network_privacy_network_settings"
            android:hint="@string/hint_network_privacy_settings"
            style="@style/custom_TextInputLayout"
            app:endIconMode="dropdown_menu">
            <AutoCompleteTextView
                android:id="@+id/ctv_network_privacy_network_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:inputType="textCapCharacters"
                tools:ignore="LabelFor,RtlSymmetry"
                style="@style/custom_auto_complete_textview">
            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_save_network_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/btn_text_save"
            style="@style/theme_normal_button"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</FrameLayout>